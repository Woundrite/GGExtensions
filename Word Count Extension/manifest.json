{
    "manifest_version": 3,
    "name": "Word Count Extension",
    "version": "1.0",
    "description": "Effortlessly track your word count with our sleek and intuitive word counter tool.",
    "permissions": [
        "storage"
    ],
    "optional-permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}