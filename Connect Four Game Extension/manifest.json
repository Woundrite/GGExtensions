{
    "manifest_version": 3,
    "name": "Connect Four Game Extension",
    "version": "1.0",
    "description": "Four in a row, the ultimate glow! Who's ready for Connect 4?",
    "permissions": [
        "storage"
    ],
    "optional-permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}